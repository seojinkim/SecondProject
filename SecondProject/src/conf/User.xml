<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="USERS">
	<resultMap type="UserBean" id="userBean">
		<result property="id" column="id" />
		<result property="pw" column="pw" />
		<result property="name" column="name" />
		<result property="age" column="age" />
		<result property="phoneNumber" column="phone_number" />
	</resultMap>

	<select id="isIdValid" parameterType="UserBean" resultMap="userBean">
		select * from users where id=#{id} and pw=#{pw}
	</select>

	<select id="selectOneByIdFromUser" parameterType="UserBean" resultMap="userBean">
		select * from users where id=#{id}
	</select>

	<insert id="join" parameterType="UserBean">
		insert into users values(#{id}, #{pw}, #{name}, #{age}, #{phoneNumber})
		insert into analysis values(#{id}, 0)
	</insert>
</mapper>