<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="SPEND">
	<resultMap type="SpendBean" id="spendBean">
		<result property="rowIndex" column="SPEND_NUM" />
		<result property="spendNum" column="SPENDLIST_NUM" />
		<result property="id" column="MEMBER_ID" />
		<result property="spendLocation" column="SPEND_LOCATION" />
		<result property="spendPrice" column="SPEND_EXPENSE" />
		<result property="spendDate" column="SPEND_DATE" />
		<result property="memo" column="SPEND_MEMO" />
	</resultMap>

	<select id="selectAll" parameterType="string" resultMap="spendBean">
		SELECT * FROM spend where member_id=#{id} order by spend_date desc
	</select>
	
	<!-- 지출 등록 -->
	<insert id="insertSpend" parameterType="SpendBean">
		INSERT INTO SPEND VALUES(SPEND_SQ.NEXTVAL, #{spendNum}, #{id}, #{spendLocation}, #{spendPrice}, #{spendDate}, #{memo})
	</insert>
	
	<!-- 지출목록 수정 -->
	<update id="updateSpend" parameterType="spendBean">
		update spend set spend_date=#{spendDate}, spend_price=#{spendPrice}, spend_location=#{spendLocation}, spend_memo=#{memo} where member_id=#{id} and spend_num=#{spnedNum}
	</update>
	
	<!-- 지출 삭제 -->
	<delete id="deleteSpend" parameterType="spendBean">
		delete from spend where member_id=#{id} and spend_num=#{spendNum}
	</delete>

</mapper>